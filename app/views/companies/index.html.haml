.row.vacancies.margin-top20  
  .col-xs-9
    .row.search
      .col-xs-6
        = company_count_russian(@companies.count)
      .col-xs-6
        - form_tag(companies_path, method: "get")
        %form{action: companies_path, method: 'get'}
          .input-group
            = text_field_tag(:search, params[:search], {class: "form-control", placeholder: "Введите ключевое слово"})
            %span.input-group-btn
              %button.btn.btn-default{type: "submit"}
                %span.glyphicon.glyphicon-search
    #companies
      = render 'companies'
  .col-xs-3
    .blank
