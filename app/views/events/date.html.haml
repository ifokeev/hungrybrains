.row.margin-top20
  .col-xs-12
    .white-inner
      .row
        .col-xs-3{style: 'border-right:1px solid #ccc;height:100%'}
          = render 'menu'
        .col-xs-9
          %h4.text-center.no-margin-top.no-margin-bottom
            События, проходящие
            %span.curdate{:data => {:date => params[:date].to_date.strftime('%Y/%m/%d')}}
              = Russian::strftime(params[:date].to_date, "%d %B")
          .white-inner-content
            = render 'feed'

:coffee
  ready = ->
    window.dp.datepicker('update', $('.curdate').data('date'))

  $(document).ready(ready)
  $(document).on('page:load', ready)