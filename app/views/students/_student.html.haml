- @student = student
.row.vacancy-row
  .col-md-1
    = get_student_response(@responses, student).status
    - if get_student_response(@responses, student).unreviewed?
      = render 'accept'
      = render 'reject'
    - else
      = render 'unreview'
  .col-md-2.logo
    = image_tag student.avatar.url(:thumb)
  .col-md-6
    .row.title
      %p= full_name(student)
    .row.description
      = student.brief_description
  .col-md-2.text-right
    .location
      = student.location
    .university
      = full_university(student)
