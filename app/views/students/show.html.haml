.row.margin-top20  
  .col-md-3
    %center
      = image_tag "student-promo.png"
  .col-md-9
    .row
      .col-md-8
        %h2
          = [@student.name, @student.user.role].join(" : ")
      .col-md-4.text-right
        - if current_user?(@student.user)
          .row
            .col-md-6
              = button_to "Редактировать профиль", edit_student_path, method: "get", class: "btn btn-default btn-sm btn-student"
            .col-md-6
              = button_to "Мои отклики", responses_student_path, method: "get", class: "btn btn-default btn-sm btn-company"
    %ol.breadcrumb.profile
      %li
        Москва
      %li
        МГТУ им. Н.Э. Баумана
.row.margin-top20  
  .col-md-3
    %strong.subtitle
      Обо мне
    .description
      Текст
    %strong.subtitle
      Контактная информация
    .contact
      = link_to "VK", "http://vk.com/durov"
  .col-md-9
    - if @student.vacancies.any?
      = render @student.vacancies