.row.vacancies.margin-top20  
  .col-md-9
    .search.row
      .col-md-6
        = vacancies_search_count(@vacancies)
      .col-md-6
        %form{action: vacancies_path, method: 'get'}
          .input-group
            = text_field_tag(:search, params[:search], {class: "form-control", placeholder: "Введите ключевое слово"})
            %span.input-group-btn
              %button.btn.btn-default{type: "submit"}
                %span.glyphicon.glyphicon-search

    #vacancies
      = render 'vacancies'

  .col-md-3
    - if logged_in? and current_user.has_role? :company
      = button_to "Добавить стажировку", new_vacancy_path, method: "get", class: "btn btn-default btn-lg btn-company"
    .blank
