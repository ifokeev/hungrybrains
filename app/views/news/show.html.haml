.white-inner.margin-top20
  %div.htitle
    .pull-left
      %h4.no-margin-bottom.no-margin-top
        = @news.title
    .pull-right
      = Russian::strftime(@news.created_at, "%d %B")
    .clearfix
  .white-inner-content.no-padding-right.no-padding-left.margin-top10
    - if @news.txt.empty?
      = simple_format(@news.preview)
    - else
      = simple_format(@news.txt)