.form-wrapper
  = form_for @user do |f|
    = hidden_field_tag :type, "company"
    %div
      %span.text-center.auth-text Войти с помощью:
      %a{:href => "#"}
        = image_tag 'vk-auth.png'
      %a{:href => "#"}
        = image_tag 'fb-auth.png'
      %a{:href => "#"}
        = image_tag 'tw-auth.png'
    .form-group
      = text_field_tag :name, params[:name], class: "nameField form-control", placeholder: "Название компании"
    .form-group
      = f.email_field :email, class: "emailField form-control", placeholder: "Email"
    .form-group                    
      = f.password_field :password, class: "passwordField form-control", placeholder: "Пароль"
    .checkbox
      %label
        %input{:type => "checkbox"}
          Я принимаю пользовательское соглашение
    .text-center.margin-top30
      = f.submit "Регистрация", class: "btn btn-default btn-lg btn-student"
