.form-wrapper
  = form_for @user do |f|
    = hidden_field_tag :type, "company"
    %div
      %span.text-center.auth-text Войти с помощью:
      %a{:href => "#"}
        = image_tag 'vk-auth.png'
      %a{:href => "#"}
        = image_tag 'fb-auth.png'
      %a{:href => "#"}
        = image_tag 'tw-auth.png'
    .form__content
      .form__row
        %label.form__content-left
          Название компании
        .form__content-right
          = text_field_tag :name, params[:name], class: "nameField form-control form__content-right__input", placeholder: "Название компании", id: "company_name"
        %p.companyname-error{:style => "position: absolute; margin-left: 5px; color: red"}
      .form__row
        %label.form__content-left
          Email
        .form__content-right
          = f.email_field :email, class: "emailField form-control form__content-right__input", placeholder: "Email", id: "company_email"
        %p.companyemail-error{:style => "position: absolute; margin-left: 5px; color: red"}
      .form__row
        %label.form__content-left
          Пароль
        .form__content-right 
          = f.password_field :password, class: "passwordField form-control form__content-right__input", placeholder: "Пароль", id: "company_password"
        %p.companypassword-error{:style => "position: absolute; margin-left: 5px; color: red"}
    .checkbox
      %label
        %input{:type => "checkbox"}
          Я принимаю пользовательское соглашение
    .text-center.margin-top30
      = f.submit "Регистрация", class: "btn btn-default btn-lg btn-student", id: "company_button"
